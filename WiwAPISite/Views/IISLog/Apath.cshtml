@model WiwAPISite.Models.IISLogViewModel
@{
    ViewBag.Title = "Apath";
}



<div class="col-lg-12">

    <div class="col-lg-6">
        <h2>
            Target of operation
        </h2>
    </div>

    <div  class="col-lg-6">
        <h2>
            <a href="@Url.Action("Index", "IISLog")" class="btn" onclick="javascript:history.back()">
                <span class="glyphicon glyphicon-circle-arrow-left"> Back</span>
            </a>
        </h2>
    </div>
</div>




@if (Model.Accesslist != null && Model.Accesslist.Count > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default panel-info">
                <table class="table table-bordered table-striped" id="applist">

                    <thead>
                        <tr class="primary" style="background-color:lightsteelblue;">
                            <th>wwwRootFolder</th>
                            <th>AccessPath</th>
                            <th>User IP (Access Date)</th>
                            <th>Hit Count</th>
                        </tr>
                    </thead>

                        @foreach (var ap in Model.Accesslist)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => ap.wwwRootFolder)</td>
                                <td> @Html.DisplayFor(modelItem => ap.accessPath)</td>  
                                <td> @Html.DisplayFor(modelItem => ap.UserIP)</td>                          
                                <td> @Html.DisplayFor(modelItem => ap.hitCnt)</td>
                            </tr>                   

                        } 

                </table>
            </div> <!--panel-info -->
        </div>
    </div>

}  <!--end if Folderlist count >0-->
<script type="text/javascript" charset="utf-8">

    $(document).ready(function () {
        $('#applist').DataTable(
            {


                stateSave: true,
                //filter: false,
                info: true,
                ordering: true,
                searching: false,
                paging: false
               // "lengthMenu": [[ 25, 50, -1], [ 25, 50, "All"]]
             }

           )
    });
</script>

